{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Current Lab",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/${fileDirnameBasename}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Enable break on all exceptions",
                    "text": "catch throw",
                    "ignoreFailures": true
                }
            ],
            "sourceFileMap": {
                "${workspaceFolder}": "${workspaceFolder}"
            },
            "preLaunchTask": "build current lab"
        }
    ]
}